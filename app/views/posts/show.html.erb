<h1><%= markdown @post.title %></h1>
<div class = "row">
  <div class = "span8">
    <small>
      <% image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      summitted <%= time_age_in_words(@post.created_at) %> ago by <%=@post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
  </div>
  <div class = "span4">
    <% if can? :edit, @post %>
      <%= link_to "edit", edit_topic_post_path(@topic,@post), class: 'btn btn-large btn-vlock'%>
    <% end %>
  </div>
</div>
